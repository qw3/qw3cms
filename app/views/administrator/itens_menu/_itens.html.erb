<table class="list">
  <tr>
    <th><%= check_all_th %></th>
    <th>ID</th>
    <th>Nome</th>
    <th>Alias</th>
    <th>Link</th>
    <th>Menu</th>
    <th>Ordem</th>
    <th>Publicado</th>
    <th>Remover ?</th>
  </tr>

<% @itens_menu.each do |item| %>
  <tr class="<%= cycle('linha0','linha1') %>">
    <td width="5%" align="center"><%= check_all_td item.id %></td>
    <td width="5%">
      <%= link_to item.id, edit_administrator_item_menu_path(item) %>
    </td>
    <td>
      <%= link_to item.nome, edit_administrator_item_menu_path(item) %>
    </td>
    <td><%= item.alias %></td>
    <td><%= item.link %></td>
    <td><%= item.menu.nome %></td>
    <td width="15%" align="center"><%= ordenar_td item.id, "itens_menu" %></td>
    <td align="center" width="10%">
      <% if item.publicado %>
        <% icone = image_tag 'lib/qw3/publicado.png', :size => '16x16' %>
      <% else %>
        <% icone = image_tag 'lib/qw3/sair.png', :size => '16x16' %>
      <% end %>
      <%= link_to icone, "/administrator/itens_menu/#{item.id}/publicar" %>
    </td>
    <td align="center"><%= link_to image_tag('lib/qw3/remove-icon.png', :border => 0, :title => 'Remover'), administrator_item_menu_path(item), :confirm => "VocÃª tem certeza?", :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= pagination_footer @itens_menu %>

<%= form_for([:administrator, @item_menu]) do |f| %>
  <% if @item_menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item_menu.errors.count, "erro" ) %>:</h2>

      <ul>
      <% @item_menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome%> 
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :alias, "Nome de sistema (preenchimento automÃ¡tico)" %>
    <%= f.text_field :alias %>
  </div>
  <div class="field">
    <%= f.label :link %> 
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :filtro %> 
    <%= f.text_field :filtro %>
  </div>
  <div class="field">
    <%= f.label :menu_id %> 
    <%= f.select :menu_id, Menu.all.collect{ |m| [m.nome, m.id] }, :include_blank => "-- Selecione um menu --" %>
  </div>
  <div class="actions">
    <%= link_to "< Voltar", administrator_itens_menu_path, :class => 'button cancel' %>
    <%= f.submit :class => 'button', :value => 'Salvar' %>
  </div>
<% end %>

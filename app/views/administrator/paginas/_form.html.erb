<%= form_for([:administrator,   @pagina]) do |f| %>
  <% if @pagina.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pagina.errors.count, "erro" ) %>:</h2>

      <ul>
      <% @pagina.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo, "Título" %> 
    <%= f.text_field :titulo, :size => "99px" %>
  </div>
  <div class="field">
    <%= f.label :conteudo, "Conteúdo" %> 
    <%= f.cktext_area :conteudo, :toolbar=>'Full', :width=>'900px', :height=>'400px' %>
  </div>
  <div class="actions">
	<%= link_to "< Voltar", administrator_paginas_path, :class => 'button cancel' %>
    <%= f.submit :class => 'button', :value => 'Salvar' %>
  </div>
<% end %>
